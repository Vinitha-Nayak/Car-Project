pipeline {
  agent none
  stages {
    stage('Install httpd') {
      agent {
        docker { image 'httpd:latest' }
      }
      steps {
        echo 'succe'
      }
    }
    stage('copy from src to des ') {
      steps {
        sh 'cp -r /var/lib/jenkins/workspace/Sample-pipeline-project/*  /var/www/html/'
        sh 'cd /var/www/html/'
        sh 'ls'
      }
    }
  }
}
